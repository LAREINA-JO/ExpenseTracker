{
  "extends": "../../build-common-config/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "e2e",
    "build-common-config",
    "build-common-config/.prettierrc.js",
    "build-tools",
    "scripts",
    ".storybook/**/*"
  ]
}
